{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "phases": {
        "install": {
          "apt": [
            "libmysqlclient-dev"
          ],
          "commands": [
            "pip install mysqlclient==2.1.0",
            "pip install -r requirements.txt"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT"
  }
}