{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "phases": {
        "install": {
          "apt": [
            "python3-dev",
            "default-libmysqlclient-dev",
            "build-essential",
            "pkg-config"
          ],
          "commands": [
            "pip install mysqlclient==2.1.0",
            "pip install -r requirements.txt"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"[::]:$PORT\""
  }
}